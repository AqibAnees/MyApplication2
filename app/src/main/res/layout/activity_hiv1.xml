<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.hiv1">


    <TextView
        android:id="@+id/textViewhiv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/hiv_text" />

    <Button
        android:id="@+id/btnhiv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="230dp"
        android:onClick="expandlisthiv"
        android:text="CLASSIFY by counting the number of positive  findings " />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="290dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layout_hiv"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_hiv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="three or more positive findings "
            />
        <Button
            android:id="@+id/btn_hiv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="less than three positive findings "
            />

    </LinearLayout>

</RelativeLayout>